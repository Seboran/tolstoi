---
import { Image } from 'astro:assets'
import speaker from '../../images/speaker1.png'
---

<Image
  class="w-32 md:w-md md:mt-10 apparition rounded-lg"
  src={speaker}
  alt="Nirina Rabeson qui présente durant une conférence"
/>

<style scoped>
  @keyframes opacity-transition {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .apparition {
    animation-name: opacity-transition;
    animation-timing-function: linear;
    animation-duration: 1s;
  }
</style>
